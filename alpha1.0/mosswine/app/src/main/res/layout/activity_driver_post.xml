<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.food2school.loginregister.DriverPost">

    <EditText
        android:id="@+id/etReturnAddress"
        android:layout_width="172dp"
        android:layout_height="39dp"
        android:hint="Address"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_PostBackTo"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/datePicker" />

    <EditText
        android:id="@+id/etMaxOrderNum"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:hint="Number"
        android:inputType="text|number"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_PostMaxOrder"
        android:layout_marginLeft="-2dp"
        app:layout_constraintLeft_toLeftOf="@+id/datePicker" />

    <TextView
        android:id="@+id/textView_PostBackTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to:"
        android:textSize="18sp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/autoCompleteTextView"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView" />

    <TextView
        android:id="@+id/textView_PostDeliTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-7dp"
        android:layout_marginTop="73dp"
        android:text="Delivers At:"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView_PostBackTo"
        app:layout_constraintTop_toBottomOf="@+id/textView_PostBackTo" />

    <TextView
        android:id="@+id/textView_PostMaxOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Order:"
        android:textSize="18sp"
        android:layout_marginLeft="-7dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView_PostBackTo"
        android:layout_marginTop="153dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_PostDeliTime" />

    <Button
        android:id="@+id/bDriverPost"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:text="Post"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="46dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="167dp"
        android:layout_height="78dp"
        android:timePickerMode="spinner"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/datePicker"
        app:layout_constraintLeft_toRightOf="@+id/textView_PostDeliTime"
        android:layout_marginLeft="8dp" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="150dp"
        android:layout_height="97dp"
        android:layout_marginLeft="17dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        app:layout_constraintLeft_toLeftOf="@+id/timePicker"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/etReturnAddress"
        tools:layout_editor_absoluteY="168dp"
        tools:layout_editor_absoluteX="139dp" />


</android.support.constraint.ConstraintLayout>